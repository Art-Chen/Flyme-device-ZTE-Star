<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/testing"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen android:title="@string/testing_phone_info">
        <intent android:targetPackage="com.flyme.DeviceOriginalSettings" android:action="android.intent.action.MAIN" android:targetClass="com.flyme.DeviceOriginalSettings.RadioInfo" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/testing_battery_info">
        <intent android:targetPackage="com.flyme.DeviceOriginalSettings" android:action="android.intent.action.MAIN" android:targetClass="com.flyme.DeviceOriginalSettings.BatteryInfo" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/testing_usage_stats">
        <intent android:targetPackage="com.flyme.DeviceOriginalSettings" android:action="android.intent.action.MAIN" android:targetClass="com.flyme.DeviceOriginalSettings.UsageStatsActivity" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/testing_wifi_info">
        <intent android:targetPackage="com.flyme.DeviceOriginalSettings" android:action="android.intent.action.MAIN" android:targetClass="com.flyme.DeviceOriginalSettings.wifi.WifiInfo" />
    </PreferenceScreen>
</PreferenceScreen>