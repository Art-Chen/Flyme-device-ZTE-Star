<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <PreferenceCategory android:title="@string/live_display_title" android:key="live_display_options">
        <ListPreference android:persistent="false" android:title="@string/live_display_mode" android:key="live_display" />
        <com.android.settings.livedisplay.DisplayTemperature android:persistent="false" android:title="@string/live_display_color_temperature_title" android:key="live_display_color_temperature" android:dialogTitle="@string/live_display_title" />
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference android:title="@string/live_display_outdoor_mode_title" android:key="live_display_auto_outdoor_mode" android:summary="@string/live_display_outdoor_mode_summary" android:defaultValue="true" />
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference android:title="@string/live_display_low_power_title" android:key="live_display_low_power" android:summary="@string/live_display_low_power_summary" android:defaultValue="true" settings:advanced="true" />
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference android:title="@string/live_display_enhance_color_title" android:key="live_display_color_enhance" android:summary="@string/live_display_enhance_color_summary" android:defaultValue="true" settings:advanced="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_calibration" android:key="calibration" settings:advanced="true">
        <PreferenceScreen android:persistent="false" android:title="@string/screencolor" android:key="screencolor_settings" android:summary="@string/screencolor_summary" settings:advanced="true">
            <intent android:targetPackage="com.android.settings" android:action="com.qualcomm.display.PPService" android:targetClass="com.android.settings.ScreenColorSettings" />
        </PreferenceScreen>
        <com.android.settings.livedisplay.DisplayColor android:persistent="false" android:title="@string/color_calibration_title" android:key="color_calibration" android:summary="@string/color_calibration_summary" android:dialogTitle="@string/color_calibration_title" settings:advanced="true" />
        <com.android.settings.livedisplay.DisplayGamma android:persistent="false" android:title="@string/gamma_tuning_title_head" android:key="gamma_tuning" android:summary="@string/gamma_tuning_summary_head" android:dialogTitle="@string/gamma_tuning_title_head" settings:advanced="true" />
    </PreferenceCategory>
</PreferenceScreen>